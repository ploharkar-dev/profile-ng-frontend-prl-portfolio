{
  "name": "pinakeshwar-portfolio",
  "version": "1.0.0",
  "description": "Professional portfolio of Pinakeshwar - Senior Full-Stack Developer specializing in microservices architecture and cloud-native solutions",
  "author": {
    "name": "Pinakeshwar Rajendra Loharkar",
    "email": "ploharkar21@gmail.com",
    "url": "https://pinakeshwar-portfolio.netlify.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ploharkar-dev/pinakeshwar-portfolio.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "build:ssr": "ng build --configuration=production && npm run build:server",
    "build:server": "ng build --configuration=production --project=myprofile",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr": "node dist/myprofile/server/server.mjs",
    "lint": "ng lint || true",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json,md}\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.10.0",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/ssr": "^21.1.4",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
